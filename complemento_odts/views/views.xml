              <group>
                  <field name="duracion_spot_1"/>
                  <field name="duracion_spot_2"/><!--jajajja-->
                  <field name="duracion_spot_3"/>
              </group>
              <group>
                  <field name="duracion_spot_4"/>
                  <field name="duracion_spot_6"/>
                  <field name="duracion_spot_otro"/>
