                    <tree editable="bottom">
                        <field name="comedia_canal"/>
                        <field name="comedia_genero" readonly="1"/>
                        <!--<field name="comedia_duracion"/>-->
                        <field name="comedia_especificar_aaee"/>
                    </tree>
                  </field>
              </page>
              <!-- TABLA ENLATADOS BOOL -->
              <page name="page_enlatados_tbl" string="Canal 9">
                  <field name="tabla_enlatados_bool" widget="one2many_list" attrs="{'invisible':[('canal9_bool', '=', False)]}">
                    <tree editable="bottom">
                        <field name="enlatados_canal"/>
                        <field name="enlatados_genero" readonly="1"/>
                        <!--<field name="enlatados_duracion"/>-->
                        <field name="enlatados_especificar_aaee"/>
                    </tree>
                  </field>
              </page>
              <!-- TABLA REVISTA BOOL -->
              <page name="page_revista_tbl" string="Revista">
                  <field name="tabla_revista_bool" widget="one2many_list" attrs="{'invisible':[('revista_bool', '=', False)]}">
                    <tree editable="bottom">
                        <field name="revista_canal"/>
                        <field name="revista_genero" readonly="1"/>
                        <!--<field name="revista_duracion"/>-->
                        <field name="revista_especificar_aaee"/>
                    </tree>
                  </field>
              </page>
              <!-- TABLA DEPORTIVOS BOOL -->
              <page name="page_deportivos_tbl" string="Deportivos">
                  <field name="tabla_deportivos_bool" widget="one2many_list" attrs="{'invisible':[('deportivos_bool', '=', False)]}">
                    <tree editable="bottom">
                        <field name="deportivos_canal"/>
                        <field name="deportivos_genero" readonly="1"/>
                        <!--<field name="deportivos_duracion"/>-->
                        <field name="deportivos_especificar_aaee"/>
                    </tree>
                  </field>
              </page>
              <!-- TABLA LUCHA BOOL -->
              <page name="page_lucha_tbl" string="Lucha libre">
                  <field name="tabla_lucha_bool" widget="one2many_list" attrs="{'invisible':[('lucha_bool', '=', False)]}">
                    <tree editable="bottom">
                        <field name="lucha_canal"/>
                        <field name="lucha_genero" readonly="1"/>
                        <!--<field name="lucha_duracion"/>-->
                        <field name="lucha_especificar_aaee"/>
                    </tree>
                  </field>
              </page>
              <!-- TABLA NOTICIEROS BOOL -->
              <page name="page_noticieros_tbl" string="Noticieros">
                  <field name="tabla_noticieros_bool" widget="one2many_list" attrs="{'invisible':[('noticiero_bool', '=', False)]}">
                    <tree editable="bottom">
                        <field name="noticieros_canal"/>
                        <field name="noticieros_genero" readonly="1"/>
                        <!--<field name="noticieros_duracion"/>-->
                        <field name="noticieros_especificar_aaee"/>
                    </tree>
                  </field>
              </page>
              <!-- TABLA TELENOVELAS BOOL -->
              <page name="page_telenovelas_tbl" string="Telenovelas">
                  <field name="tabla_telenovelas_bool" widget="one2many_list" attrs="{'invisible':[('telenovelas_bool', '=', False)]}">
                    <tree editable="bottom">
                        <field name="telenovelas_canal"/>
                        <field name="telenovelas_genero" readonly="1"/>
                        <!--<field name="telenovelas_duracion"/>-->
                        <field name="telenovelas_especificar_aaee"/>
                    </tree>
                  </field>
              </page>
              <field name="tvsa_requerir_especificaciones" placeholder="En caso de requerir acciones especiales fuera de lo standard, especificar aquí."/>
              <field name="tvsa_abierta_observaciones_dos" placeholder="Observaciones"/>
          </page>
        </xpath>
        <!-- Fin pestaña aaee tva tvsa -->

        <!-- Pestaña televisa tv abierta Local -->
        <xpath expr="//page[@name='medios_local_televisa']" position="replace">
          <page name="medios_local_televisa" string="Televisa TV Abierta Local" attrs="{'invisible': [('med_spot_tv_abierta_local','=',False)]}">
            <group>
              <field name="tvsa_marca_pro"/>
              <field name="tvsa_local"/>
              <field name="period_campania_tvab" attrs="{'required':[('med_spot_tv_abierta', '=', True)]}"/>
              <field name="target_tvsa"/>
              <h3>Regulación</h3>
              <field name="tvsa_local_regulacion_cofepris"/>
              <field name="tvsa_local_regulacion_favor"/>
              <field name="tvsa_local_regulacion_kids"/>
            </group>
            <page name="Tabla plazas" string="Plazas">
                <field name="tabla_plaza_medios" widget="one2many_list">
                  <tree editable="bottom">
                      <field name="name" required="1"/>
                      <field name="tipo_actividad"/>
                      <field name="duracion" attrs="{'readonly': [('tipo_actividad','!=','1')]}"/>
                      <field name="especificacion" attrs="{'readonly': [('tipo_actividad','!=','3')]}"/>
                  </tree>
                </field>
            </page>
            <group>
              <field name="tvsa_local_rotacion"/>
            </group>
            <br/>
            <page name="Tabla Foro TV" string="Foro TV">
                <field name="tabla_forotv_medios" widget="one2many_list">
                  <tree editable="bottom">
                    <field name="name" string="Foro TV"/>
                    <field name="tipo_actividad"/>
                    <field name="duracion" attrs="{'readonly': [('tipo_actividad','!=','1')]}"/>
                    <field name="especificacion" attrs="{'readonly': [('tipo_actividad','=', '1')]}"/>
                  </tree>
                </field>
            </page>
            <group>
              <field name="tvsa_local_rotacion_dos"/>
            </group>
            <br/>
            <field name="tvsa_abierta_observaciones" placeholder="Observaciones"/>
            <group>
              <p>
                NOTA:<br/>
                1. La duración de los bloqueos es de 20”. No disponible en IV Q.
                <br/>
                2.- Acciones especiales que pueden solicitarse: Cámara portátil x Hora,
                Prod. / Edición Cápsula 60”, Mención en vivo 60”, Mención Grabada 60”, Entrevista 180”,
                Transmisión cápsula producida 60”, Transmisión cápsula grabada 40”, Cortinilla 5” c/u,
                Cintillo 5”, Presencia de Marca, Patrocinio de Sección.
              </p>
            </group>
          </page>
        </xpath>
        <!-- Fin pestaña televisa tv abierta local -->
        
        <!-- Pestaña televisa spoteo tv abierta nacional  -->
        <xpath expr="//page[@name='medios_tv_abierta']" position="replace">
          <page name="medios_tv_abierta" string="Televisa Spoteo TV Abierta Nacional" attrs="{'invisible': [('med_spot_tv_abierta','=',False)]}">
            <group string="Televisa Spoteo TV Abierta Nacional">
              <field name="tvsa_marca_pro_nac"/>
              <field name="tvsa_abierta"/>
              <field name="sptv_periodo_camp2" attrs="{'required':[('med_spot_tv_abierta', '=', True)]}"/>
              <field name="tvsa_catego_televisa"/>
              <h5>Duración Spot</h5>
            </group>
            <group colspan="2">
              <group>
                  <field name="duracion_spot_1"/>
                  <field name="duracion_spot_2"/>
                  <field name="duracion_spot_3"/>
              </group>
              <group>
                  <field name="duracion_spot_4"/>
                  <field name="duracion_spot_6"/>
                  <field name="duracion_spot_otro"/>
                  <field name="rotation_indication"/>
              </group>
            </group>
            <group>
              <h3>Target de planeación</h3>
              <field name="target_planed_primary" string="Primario"/>
              <field name="target_planed_second" string="Secundario"/>
              <h3>Condiciones</h3>
              <field name="opcion_compra"/>
              <field name="target_compra_modulo" attrs="{'invisible': [('opcion_compra','!=','1'),('opcion_compra','!=','2'),('opcion_compra','!=','3')]}"/>
              <field name="target_especial" attrs="{'invisible': [('opcion_compra','!=','1'),('opcion_compra','!=','2'),('opcion_compra','!=','3')]}"/>
              <field name="mixto_proporcion" attrs="{'invisible': [('opcion_compra','!=','3')]}"/>
              <field name="condiciones_especiales"/>
              <h3>Regulación</h3>
              <!--<field name="cofepris"/>-->
              <field name="regulacion_cofepris"/>
              <field name="regulacion_favor"/>
              <field name="regulacion_kids"/>
              <field name="canal_1" attrs="{'invisible':[('opcion_compra','!=','4'),('opcion_compra','!=','5')]}"/>
              <field name="canal_2" attrs="{'invisible':[('opcion_compra','!=','4'),('opcion_compra','!=','5')]}"/>
              <field name="canal_3" attrs="{'invisible':[('opcion_compra','!=','4'),('opcion_compra','!=','5')]}"/>
              <br/>
            </group>
            <div class="text-muted">
                NOTAS
                <br/>
                1. Canales Módulos o Franjas siempre serán 2, 5 y 9
                <br/>
                2. En caso de que el target elegido resulte menor al 3% del Universo total, la Dirección de Medios hará una recomendación conforme a la política de Tv Promo.
                <br/>
                3. La categoría debe coincidir con la que el cliente ha dado de alta para su producto en Televisa. En caso de ser producto nuevo, el cliente debe decidir la categoría.
            </div> 
          </page>
        </xpath>
        <!--  Fin pestaña televisa spoteo tv abierta nacional  -->
        
        <!--  Pestaña formacion del target ibope  -->
        <xpath expr="//page[@name='medios_ibope']" position="replace">
          <page name="medios_ibope" string="Formación de Target IBOPE" attrs="{'invisible':[('med_spot_tv_abierta','=',False),('med_aaee_tv','=',False),('med_spoteo_carriers','=',False),('med_net_televisa','=',False),('med_otros_net','=',False),('med_spot_tv_abierta_local','=',False)]}">
            <group>
              <h3>Sexo</h3>
                <field name="tvsa_sexo" string=" "/>
              <h3>Grupos de Edad</h3>
                <field name="tvsa_grupo_edad_1" attrs="{'readonly': [('tvsa_grupo_edad_otro','!=',False)]}"/>
                <field name="tvsa_grupo_edad_2" attrs="{'readonly': [('tvsa_grupo_edad_otro','!=',False)]}"/>
                <field name="tvsa_grupo_edad_3" attrs="{'readonly': [('tvsa_grupo_edad_otro','!=',False)]}"/>
                <field name="tvsa_grupo_edad_4" attrs="{'readonly': [('tvsa_grupo_edad_otro','!=',False)]}"/>
                <field name="tvsa_grupo_edad_5" attrs="{'readonly': [('tvsa_grupo_edad_otro','!=',False)]}"/>
                <field name="tvsa_grupo_edad_6" attrs="{'readonly': [('tvsa_grupo_edad_otro','!=',False)]}"/>
                <field name="tvsa_grupo_edad_otro" attrs="{'invisible': ['|','|','|','|','|','|',('tvsa_grupo_edad_1','=',True),('tvsa_grupo_edad_2','=',True),('tvsa_grupo_edad_3','=',True),('tvsa_grupo_edad_4','=',True),('tvsa_grupo_edad_5','=',True),('tvsa_grupo_edad_6','=',True)]}" />    
