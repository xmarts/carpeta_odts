                <field name="med_revista" attrs="{'invisible':[('med_tipo_trabajo','!=','3')]}"/>
                <field name="med_prensa" attrs="{'invisible':[('med_tipo_trabajo','!=','3')]}"/>  
               </group>
               <group>
                <field name="med_ooh" attrs="{'invisible':[('med_tipo_trabajo','!=','3')]}"/>
                <field name="med_digital" attrs="{'invisible':[('med_tipo_trabajo','!=','3')]}"/>
                <field name="med_analisis"  invisible="1" attrs="{'invisible':[('med_tipo_trabajo','!=','3')]}"/>
                <field name="lost_reason" invisible="1"/>
                <field name="date_conversion" invisible="1"/>
               </group>
              </group>
          </group>
        </xpath>
        <!--  CAMBIAMOS EL TEXTO DE MARCA DE LA CARATULA -->
        <xpath expr="//field[@name='marca']" position="attributes">
          <attribute name="string">Marca o producto</attribute>
        </xpath>
        <!--  PONEMOS COMO OBLIGATORIO EL CAMPO PERIDO DE CAMPAÑA DE LA CARATULA -->
        <xpath expr="//field[@name='med_periodo_camap']" position="replace">
          <field name="med_periodo_camap" required="1"/>
